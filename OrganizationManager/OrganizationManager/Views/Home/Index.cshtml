@addTagHelper * ,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "";
    Layout = "";
}


<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
    .main-page-login-background {
        
        background-color: rgba(255, 255, 255, 0.4);
        padding: 20px;
        border-radius: 8px;
        font-size: 20px;
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);

        font-family: Verdana;

        /* display: flex;
        align-items: center;
        justify-content: center; */

    }
    .main-page-btn-form{
        width: 280px;
        margin: 10px;
    }
    .main-page-btn-modal{
        width: 125px;
        margin: 10px;
    }

    /* .td{
        vertical-align: top;
    } */

    body {
        background-image: url('assets/images/login-background.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
    .modal-body{
        text-align: center;
    }
    .submit-pref-modal{
        background-color: rgba(255, 255, 255, 0.4);
    }

    </style>
    <body>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js" integrity="sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+" crossorigin="anonymous"></script>

    
        <div class="main-page-login-background">
            <form action="submit" method="post">
                <center><h4>Giriş</h4></center>
                <table>
                    <tr>
                        <td>
                            <input type="email" class="form-control is-valid" id="validationServer01" placeholder="Email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="password" class="form-control is-valid" id="validationServer01" placeholder="Password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <button type="button" class="btn btn-primary main-page-btn-form">Giriş</button>
                        </td>
                    </tr>
                    <!-- <tr>
                        <td colspan="2">
                            <button type="button" class="btn btn-info main-page-btn-form" data-toggle="modal" data-target="#submit-pref-modal">Kayıt</button>
                        </td>
                    </tr> -->
                    <tr>
                        <td colspan="2">
                            <br>
                            <center><h5>Üye Ol</h5></center>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <button type="button" class="btn btn-outline-info main-page-btn-modal">Kullanıcı</button>
                            <button type="button" class="btn btn-outline-dark main-page-btn-modal">Şirket</button>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    
        <div class="modal fade" id="submit-pref-modal" role="dialog">
            <div class="modal-dialog modal-sm">
              <div class="modal-content">

                <div class="modal-header">
                    <h4 class="modal-title">Üyelik Türünü Seçiniz</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                    <div class="modal-body">
                        <table>
                            <tr>
                                <button type="button" class="btn btn-outline-info main-page-btn-modal">Kullanıcı</button>
                            </tr>
                            <tr>
                                <button type="button" class="btn btn-outline-dark main-page-btn-modal">Şirket</button>
                            </tr>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Kapat</button>
                    </div>
                </div>
            </div>
        </div>
    
    </body>